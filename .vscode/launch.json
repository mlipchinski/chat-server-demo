{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "User Service",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/user-service",
            "runtimeArgs": [
                "--import=tsx",
                "-r",
                "dotenv/config",
                "--enable-source-maps"
            ],
            "program": "${workspaceFolder}/user-service/src/server.ts",
            "envFile": "${workspaceFolder}/user-service/.env",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Chat Service",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/chat-service",
            "runtimeArgs": [
                "--import=tsx",
                "-r",
                "dotenv/config",
                "--enable-source-maps"
            ],
            "program": "${workspaceFolder}/chat-service/src/server.ts",
            "envFile": "${workspaceFolder}/chat-service/.env",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Notification Service",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/notification-service",
            "runtimeArgs": [
                "--import=tsx",
                "-r",
                "dotenv/config",
                "--enable-source-maps"
            ],
            "program": "${workspaceFolder}/notification-service/src/server.ts",
            "envFile": "${workspaceFolder}/notification-service/.env",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}